{
  "name": "study",
  "displayName": "Study",
  "version": "0.0.1",
  "description": "sample",
  "author": "tomohiro.togashi@gmail.com",
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build",
    "package": "plasmo package"
  },
  "dependencies": {
    "@heroicons/react": "^2.2.0",
    "@xstate/react": "^5.0.1",
    "plasmo": "0.64.5",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "tailwindcss": "^3.4.17",
    "xstate": "^5.19.1"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "4.1.1",
    "@types/chrome": "0.0.258",
    "@types/node": "20.11.5",
    "@types/react": "18.2.48",
    "@types/react-dom": "18.2.18",
    "postcss": "8.4.33",
    "prettier": "3.2.4",
    "typescript": "5.3.3"
  },
  "manifest": {
    "manifest_version": 3,
    "name": "My Extension",
    "version": "1.0",
    "permissions": [
      "activeTab",
      "tabs",
      "history"
    ],
    "background": {
      "service_worker": "background.ts"
    },
    "commands": {
      "_execute_action": {
        "suggested_key": {
          "default": "Ctrl+Shift+T",
          "mac": "Command+Shift+T"
        }
      },
      "open-search": {
        "suggested_key": {
          "default": "Ctrl+T",
          "mac": "Command+T"
        },
        "description": "Open the search bar"
      }
    }
  }
}